<body id = "maps_index">
  <h2>t('maps.create_map')</h2>
  <div class ="maps_validation">
    <% @map.errors.full_messages.each do |msg| %>
      <ul>
        <%= "â€»"+msg %>
      </ul>
    <% end %>
  </div>
  <table>
  <%=form_with(model:@map,local:true) do |f|%>
    <tr>
      <td><%=f.label :name %></td>
      <td><%=f.text_field :name, size:"40"%></td>
    </tr>
    <tr>
      <td><%=f.label :password %></td>
      <td><%=f.password_field :password ,placeholder: t('maps.at_least_6_characters'),  size:"40"%>
      <td><h5>&nbsp;t('maps.necessary_to_admin')</h5></td>
    </tr>
    <tr>
      <td><%=f.label :password_confirmation %>&nbsp;&nbsp;&nbsp;</td>
      <td><%=f.password_field :password_confirmation,placeholder: t('maps.reenter_password'),size:"40"%></td>
    </tr>
    <tr>
      <td><%=f.label :creater %></td>
      <td><%=f.password_field :creater ,placeholder: t('maps.user_definable'),size:"40" %></td>
    </tr>
  </table><br>
    <%=f.submit(t('maps.create'),class:"button")%>
  <% end %>
</body>
