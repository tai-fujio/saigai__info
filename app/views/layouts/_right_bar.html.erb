<div id ="right_bar">
  <div>
    <div id = "right_bar_header">
      <div>
        <button href="javascript:void(0)" class="close_btn" id="close-nav">
          <i class="fas fa-times fa-3x"></i>
        </button>
      </div>
      <div id="right_bar_message">
        <h5 id="notice_message"></h5>
      </div>
    </div>
    <div id = "right_bar_head">
      <%= render 'sites/show' ,locals:{site:@site,map:@map} %>
      <%= render 'comments/new' ,locals:{site:@site,map:@map,comment:@comment} %>
    </div>
    <div id = "right_bar_bottom">
      <div id = "comments_index">
        <%= render 'comments/index',locals:{site:@site} %>
      </div>
    </div>
  </div>
</div>
