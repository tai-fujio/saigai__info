
  <% define_check = defined? site %>
  <% unless define_check.nil?%>
    <% site.comments.each do |comment|%>
      <% unless comment.id.nil? %>
        <div id = "comment_show">
          <h3><%= comment.content %></h3>
          <h5><%= time_ago_in_words(comment.created_at)+t('maps.time_before') %></h5>
          <div class = "comment_delete_field">
          <%=form_with(url:comments_delete_path,remote:true) do |f|%>
            <%=f.submit("削除",class:"admin_button",data:{confirm: "削除しますか"})%>
            <%=f.hidden_field :id,value:comment.id %>
            <%=f.hidden_field :map_id,value:comment.site.map.id %>
            <%=f.password_field :password ,placeholder: "パスワード",size: "13"%>
            <% end %>
          </div>
          <div id = "reviews_show">
            <%= link_to t('maps.helpful'),reviews_count_path(key: :good, comment_id: comment), method: :post,remote: true %>
            <%=comment.review.good%>
            <%= link_to t('maps.not_helpful'),reviews_count_path(key: :bad,comment_id: comment), method: :post, remote: true %>
            <%=comment.review.bad%>
          </div>
        </div><hr/>
      <% end %>
    <% end %>
  <% end %>
