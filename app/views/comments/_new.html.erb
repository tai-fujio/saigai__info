<div id="comments_new">
<% define_check = defined? site %>
<% unless define_check.nil? || site.id == nil %>
  <%= form_with(model:[map,site,comment],remote:true,method: :post) do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, size: "30x4"%>
  </div>
  <div class="actions">
    <%= form.submit %>
    <% end %>
  </div>
<% end %>
</div>
